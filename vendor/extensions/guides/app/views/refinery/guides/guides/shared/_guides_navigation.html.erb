<nav id="guides">
  <ul>
    <% guides.group_by(&:category).sort.each do |category, guides| %>
      <li>
        <h3><%= category %></h3>

        <ul>
          <% guides.each do |guide| %>
            <li>
              <%= link_to guide.title, refinery.guides_guide_path(guide) %>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
</nav>