<nav id="guides-navigation">
  <ul class="guides-categories">
    <% guides.group_by(&:category).sort.each do |category, guides| %>
      <li>
        <h3><%= category %></h3>

        <ul>
          <% guides.each do |guide| %>
            <%= active_link_to guide.title, refinery.guides_guide_path(guide), wrap_tag: :li %>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
</nav>